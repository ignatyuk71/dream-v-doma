# === БЛОКУЄМО ІНДЕКСАЦІЮ ===
<IfModule mod_headers.c>
    Header set X-Robots-Tag "noindex, nofollow, noarchive"
</IfModule>
# === /КІНЕЦЬ ===


# === PERF: довгий кеш для статики ===
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"

  # CSS/JS
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"

  # Зображення
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png  "access plus 1 year"
  ExpiresByType image/gif  "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"

  # Шрифти
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  ExpiresByType font/woff  "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
  # Статика кешується надовго і не перевіряється (файли з хешами)
  <FilesMatch "\.(?:css|js|woff2|woff|ttf|eot|png|jpe?g|gif|svg|webp|avif)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # HTML/JSON/XML — не кешуємо
  <FilesMatch "\.(?:html|json|xml)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
  </FilesMatch>

  # CORS для шрифтів + коректний Vary
  <FilesMatch "\.(?:woff2|woff|ttf|eot)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
  Header append Vary Accept-Encoding
</IfModule>


# === PERF: стиснення (Brotli/Gzip) ===
<IfModule mod_brotli.c>
  BrotliCompressionQuality 5
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>


# Безпека/охайність
Options -Indexes


# === Laravel rewrite ===
<IfModule mod_rewrite.c>
    RewriteEngine On

    # ВІДДАЄМО /storage НАПРЯМУ (без Laravel)
    RewriteCond %{REQUEST_URI} ^/storage/
    RewriteRule ^ - [L]

    # Laravel далі як звично
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>